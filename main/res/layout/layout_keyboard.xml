<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/id_clear"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="C"
        android:textSize="28dp"
        />

    <Button
        android:id="@+id/id_k_left"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="("
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/id_clear"
        android:layout_toEndOf="@+id/id_clear"
        android:textSize="28dp"/>

    <Button
        android:id="@+id/id_k_right"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/id_k_left"
        android:layout_toEndOf="@+id/id_k_left"
        android:layout_toRightOf="@+id/id_k_left"
        android:textSize="28dp"
        android:text=")" />

    <Button
        android:id="@+id/id_chu"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/id_k_right"
        android:textSize="28dp"
        android:layout_toRightOf="@+id/id_k_right"
        android:text="/" />

    <Button
        android:id="@+id/id_num_7"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/id_clear"
        android:layout_toLeftOf="@+id/id_k_left"
        android:layout_toStartOf="@+id/id_k_left"
        android:text="7" />

    <Button
        android:id="@+id/id_num_4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_num_7"
        android:text="4" />

    <Button
        android:id="@+id/id_num_1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="1"
        android:layout_below="@+id/id_num_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/id_del"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:textSize="28dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_num_1"
        android:text="del" />

    <Button
        android:id="@+id/id_num_8"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/id_clear"
        android:layout_toLeftOf="@+id/id_k_right"
        android:layout_toStartOf="@+id/id_k_right"
        android:text="8" />

    <Button
        android:id="@+id/id_num_9"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/id_num_8"
        android:layout_toLeftOf="@+id/id_chu"
        android:layout_toStartOf="@+id/id_chu"
        android:text="9" />

    <Button
        android:id="@+id/id_cheng"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="*"
        android:textSize="28dp"
        android:layout_below="@+id/id_chu"
        android:layout_toRightOf="@+id/id_num_9"
        android:layout_toEndOf="@+id/id_num_9" />

    <Button
        android:id="@+id/id_num_5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/id_num_7"
        android:layout_toLeftOf="@+id/id_num_9"
        android:layout_toStartOf="@+id/id_num_9"
        android:text="5" />

    <Button
        android:id="@+id/id_num_6"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/id_num_5"
        android:layout_toLeftOf="@+id/id_cheng"
        android:layout_toStartOf="@+id/id_cheng"
        android:text="6" />

    <Button
        android:id="@+id/id_jian"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/id_cheng"
        android:textSize="28dp"
        android:layout_toEndOf="@+id/id_num_6"
        android:layout_toRightOf="@+id/id_num_6"
        android:text="-" />

    <Button
        android:id="@+id/id_num_2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/id_num_5"
        android:layout_toEndOf="@+id/id_num_1"
        android:layout_toRightOf="@+id/id_num_1"
        android:text="2" />

    <Button
        android:id="@+id/id_num_3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/id_num_2"
        android:layout_toEndOf="@+id/id_num_5"
        android:layout_toRightOf="@+id/id_num_5"
        android:text="3" />

    <Button
        android:id="@+id/id_jia"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/id_jian"
        android:layout_alignRight="@+id/id_jian"
        android:textSize="28dp"
        android:layout_below="@+id/id_num_6"
        android:text="+" />

    <Button
        android:id="@+id/id_num_0"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/id_del"
        android:layout_toLeftOf="@+id/id_num_3"
        android:layout_toStartOf="@+id/id_num_3"
        android:text="0" />

    <Button
        android:id="@+id/id_dot"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/id_num_3"
        android:layout_toEndOf="@+id/id_num_0"
        android:textSize="28dp"
        android:layout_toRightOf="@+id/id_num_0"
        android:text="." />

    <Button
        android:id="@+id/id_result"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textSize="28dp"
        android:layout_below="@+id/id_jia"
        android:layout_toEndOf="@+id/id_dot"
        android:layout_toRightOf="@+id/id_dot"
        android:text="=" />


</RelativeLayout>